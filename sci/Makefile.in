SCI_COMMANDS = \
    scicreate scidelete sciupdate sciundelete\
    scilistattrs scimatch scinewuuid scishow

client:

install-client::
	$(INSTALL_PROGRAM) sci.tcl $(UNAMEIT_BIN)/exe/sci.tcl
	for i in $(SCI_COMMANDS); do\
	    $(RM) $(UNAMEIT_BIN)/exe/$$i; \
	    ln $(UNAMEIT_BIN)/exe/sci.tcl $(UNAMEIT_BIN)/exe/$$i; \
	done
