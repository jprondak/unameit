#
# This code will generate the proc unameit_config_macros, 
# Only directories in the tree starting with $(prefix) are kept;
# an error occurs if the definition of any macro is not in the tree.
#
proc mkdirlist {dirlist} {
    array set raw $dirlist
    set prefix $raw(UNAMEIT)
    unset raw(UNAMEIT)
    set plast [expr [string length $prefix] - 1]
    set min [expr $plast + 2]
    foreach v [array names raw] {
	set dir $raw($v)
	if {[string length $dir] < $min} {
	    error "$v = $dir: $dir is not in the tree"
	}
	set first [string range $dir 0 $plast]
	if {[string compare $first $prefix]} {
	    error "$v = $dir: $dir is not in the tree"
	}
	set ud($v) [string range $dir $min end]
    }
    puts "# Please do not edit this file. It was generated using mkdirlist.\n"
    puts [array get ud]
}

mkdirlist $argv

